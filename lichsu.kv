#:kivy 1.0.0

<Stage1>
    id: stage1
    video: video
    back_btn: back_btn
    skip_btn: skip_btn
    quiz: quiz
    question: question
    answer: answer
    answer1: answer1
    answer2: answer2
    answer3: answer3
    next_btn: next_btn
    result: result
    result_status: result_status
    score_is: score_is
    score: score

    opacity: 0
    
    VideoPlayer:
        id: video
        opacity: 0
        size: root.size
        center: root.center
        source: 'stage1.mp4'
        allow_stretch: True
    
    Button:
        id: back_btn
        background_normal: "back_btn.png"
        size: 70,70
        y: root.y + root.height - 80
        x: root.x + 10
        on_press: root.parent.showUI(root.parent.tnlsui)
    
    Button:
        id: skip_btn
        background_normal: "next_btn.png"
        opacity: 0
        size: 70,70
        y: root.y + root.height - 80
        x: root.x + root.width - 80
        on_press: root.skip()

    BoxLayout:
        id: quiz
        orientation: "vertical"
        opacity: 0
        center: root.center_x, root.center_y - 50
        size: root.width - 20, root.height - 120
        spacing: 100
        padding: 10

        Label:
            id: question
            text: "Questiosfassssssssssssssssssssssssssssssssssssssssssssn"
            halign: "center"
            color: (0,0,0,1)
            font_size: 35
            text_size: 700,150
            valign: "bottom"
            halign: "center"
            size_hint: 1,0.5

        GridLayout:
            id: answer
            center: root.center_x, root.center_y
            size: root.width, root.height
            cols: 2
            valign: "left"
            spacing: 30
            
            Label:
                id: answer1
                text: "Answer1"
                font_size: 20
                color: 0,0,0,1
                text_size: 350,50
                valign: "center"
                size_hint: 1,0.5
            
            CheckBox:
                group: "answer"
                on_press: root.on_choose(0)
            
            Label:
                id: answer2
                text: "Answer2"
                font_size: 20
                color: 0,0,0,1
                text_size: 350,50
                valign: "center"
            
            CheckBox:
                group: "answer"
                on_press: root.on_choose(1)
            
            Label:
                id: answer3
                text: "Answer3"
                font_size: 20
                color: 0,0,0,1
                text_size: 350,50
                valign: "center"
            
            CheckBox:
                group: "answer"
                on_press: root.on_choose(2)

        Button:
            id: next_btn
            text: "Nộp"
            background_color: 0,1,0,1
            size_hint: 1,0.5
            on_press: root.on_click()
    
    BoxLayout:
        id: result
        orientation: "vertical"
        opacity: 0
        center: root.center_x, root.center_y + 50
        size: root.width - 20, root.height - 400
        spacing: 100
        padding: 10

        Label:
            id: result_status
            text: "Chúc mừng, bạn đã hoàn thành xuất sắc bài kiểm tra"
            font_size: 35
            valign: "bottom"
            halign: "center"
            size_hint: 1,0.5
            color: 0,0,0,1
            text_size: 700,150
        
        Label:
            id: score_is
            text: "Số điểm của bạn là: "
            font_size: 20
            color: 0,0,0,1
            size_hint: 1,0.25

        Label:
            id: score
            text: root.final_result
            color: 0,1,0,1
            font_size: 100
            valign: "top"
            size_hint:1,0.25
        
        
<TnlsUI>
    stage_area: stage_area
    
    opacity: 0
    
    GridLayout:
        id: stage_area
        center:root.center
        orientation: "lr-tb"
        cols: 7
        size: root.width-50, root.height-150
        padding: 10
        spacing: 20
    
    Button:
        id: back_btn
        background_normal: "back_btn.png"
        size: 70,70
        y: root.y + root.height - 80
        x: root.x + 10
        on_press: root.parent.showUI(root.parent.mainui)
        

<MainInterface>
    
    opacity: 0

    #AsyncImage:                                          # Change Main Interface Picture here
    #    source: ''
    #    center: root.width/2, root.height/2
    #    size: 750,750

    Button:
        id: tnls
        center_x: root.center_x
        center_y: root.center_y + 50
        size: 300,60
        text: 'Trải nghiệm Lịch sử'
        font_size: 20
        on_press: root.parent.showUI(root.parent.tnlsui)
    
    Button:
        id: cckt
        center_x: root.center_x
        center_y: root.center_y - 80
        size: 300,60
        text: 'Củng cố Kiến thức'
        font_size: 20
        

<LoadInterface>

    opacity: 0
    
    canvas.before:
        Color: 
            rgba: 1,1,1,1
        Rectangle:
            size: root.size
            pos: root.pos
    
    AsyncImage:                                          # Change App logo here
        source: 'app_icon.png'
        size: 248,260         
        center: root.width/2, root.height/2 + 75
        
    Label:                                               # App Name here
        text: 'Thắp lửa Tuổi trẻ Việt'
        text_size: 500,90
        font_size: 50
        halign: 'center'
        color: 0,0,0,1
        center_x: root.center_x
        center_y: root.center_y - 150


<MainGUI>
    logo: logo
    mainui: main
    tnlsui: tnlsui
    stage1: stage1
    
    canvas.before:
        Color:
            rgba: 1,1,1,0.9                                # Change App Color here
        Rectangle:
            size: root.size
            pos: root.pos
            
    LoadInterface:
        id: logo
        pos: root.pos
        size: root.size
        
    MainInterface:
        id: main
        pos: root.x-1000,root.y
        size: root.size
        
    TnlsUI:
        id: tnlsui
        pos: root.x-1000,root.y
        size: root.size
    
    Stage1:
        id: stage1
        pos: root.x-1000,root.y
        size: root.size